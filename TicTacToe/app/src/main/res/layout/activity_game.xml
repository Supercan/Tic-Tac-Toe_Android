<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tic_tac_toe"
        android:layout_gravity="center"
        android:textAlignment="gravity"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:textColor="#f02cd6"
        android:id="@+id/txtHeader"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tblLayout" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_game"
        android:id="@+id/btnNew"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="newGame" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/tblLayout">

        <TableRow>
            <Button
                android:text="@string/zero"
                android:id="@+id/topLeft"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp" />
            <Button
                android:text="@string/zero"
                android:id="@+id/topCenter"
                android:layout_column="2"
                android:width="100dp"
                android:height="100dp"/>
            <Button
                android:text="@string/zero"
                android:id="@+id/topRight"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="@string/zero"
                android:id="@+id/midLeft"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp" />
            <Button
                android:text="@string/zero"
                android:id="@+id/Center"
                android:layout_column="2"
                android:width="100dp"
                android:height="100dp"/>
            <Button
                android:text="@string/zero"
                android:id="@+id/midRight"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"/>
        </TableRow>

        <TableRow>
            <Button
                android:text="@string/zero"
                android:id="@+id/bottomLeft"
                android:layout_column="1"
                android:width="100dp"
                android:height="100dp" />
            <Button
                android:text="@string/zero"
                android:id="@+id/bottomCenter"
                android:layout_column="2"
                android:width="100dp"
                android:height="100dp"/>
            <Button
                android:text="@string/zero"
                android:id="@+id/bottomRight"
                android:layout_column="3"
                android:width="100dp"
                android:height="100dp"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>